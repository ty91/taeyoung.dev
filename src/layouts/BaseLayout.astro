---
import GlobalNavigationBar from "~/components/GlobalNavigationBar.astro";
import "~/styles/global.css";
import siteConfig from "site-config";

interface Props {
  title?: string;
}

const { title } = Astro.props;
const pageTitle = title ? `${title} - taeyoung.dev` : "taeyoung.dev";
---

<!doctype html>
<html lang="ko" class="dark:text-white dark:bg-black">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>

    <!-- Preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Gowun+Batang:wght@400;700&display=swap"
    />

    <!-- Favicons -->
    <link rel="icon" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" sizes="16x16" href="/favicon-16x16.png" />

    <!-- Google Analytics -->
    <script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=${siteConfig.googleAnalytics.id}`}></script>
    <script is:inline define:vars={{ gaId: siteConfig.googleAnalytics.id }}>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', gaId);
    </script>
  </head>
  <body class="mx-auto max-w-[640px] px-4">
    <GlobalNavigationBar />
    <main class="mb-24">
      <slot />
    </main>
  </body>
</html>
